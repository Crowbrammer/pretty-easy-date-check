{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "charset": "utf-8",
        "pretty": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": false,
        "removeComments": false,
        "outDir": "./dist"
    },
    "exclude": [
        "node_modules/",
        "spec.js"
    ],
    "files": [
        "index.d.ts"
    ],
    "compileOnSave": true
}